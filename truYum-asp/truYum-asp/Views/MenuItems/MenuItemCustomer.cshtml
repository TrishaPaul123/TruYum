@model IEnumerable<truYum_asp.Models.ViewModel>

@{
    ViewBag.Title = "MenuItemCustomer";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Menu Items</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.menu.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu.freeDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu.Price)
        </th>        
        <th>
            Name
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.menu.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu.freeDelivery)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu.Price)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.category.Name)
        </td>
        <td>
            @Html.ActionLink("Add to Cart", "AddToCart", new { id=item.menu.Id })
        </td>
    </tr>
}

</table>
