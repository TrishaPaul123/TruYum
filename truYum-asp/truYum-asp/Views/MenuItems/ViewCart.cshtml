@model IEnumerable<truYum_asp.Models.ViewModel1>

@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>ViewCart</h2>

@if (Model.Count() == 0)
{
    <h4>No items in cart. @Html.ActionLink("View menu items", "Index")</h4>
}

@if(Model.Count()!=0) { 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.menu.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu.freeDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menu.Price)
        </th>
        <th>
            Action
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.menu.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu.freeDelivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu.Price)
            </td>
            <td>
                @Html.ActionLink("Remove", "Delete", new { id = item.menu.Id })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("View Menu Items", "Index", "MenuItems")
</p>
}
